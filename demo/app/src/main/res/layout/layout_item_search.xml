<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="@dimen/navigation_line_width"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/drawer_search" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/search_item_name"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="8dp"
            android:drawablePadding="6.0dip"
            android:ellipsize="middle"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="北京故宫博物馆"
            android:textColor="#2d2c2c"
            android:textSize="@dimen/text_size_micro_ex" />

        <TextView
            android:id="@+id/search_item_address"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:layout_below="@id/search_item_name"
            android:drawablePadding="6.0dip"
            android:ellipsize="middle"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="北京市东城区景山前街4号"
            android:textColor="#2d2c2c"
            android:textSize="@dimen/text_size_normal" />

    </RelativeLayout>

</LinearLayout>